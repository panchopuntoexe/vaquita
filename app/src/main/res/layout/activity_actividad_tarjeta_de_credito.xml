<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadTarjetaDeCredito">

    <Button
        android:id="@+id/botonVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/Visa"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/botonVisa2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVisa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="@string/Visa"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/botonVisa3"
        app:layout_constraintStart_toEndOf="@+id/botonVisa"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVisa3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:text="@string/Visa"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/botonVisa4"
        app:layout_constraintStart_toEndOf="@+id/botonVisa2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVisa4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/Visa"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/botonVisa3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonPagarTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/pagar"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPostal" />

    <Button
        android:id="@+id/botonCancelarTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonPagarTarjeta" />

    <TextView
        android:id="@+id/textCantidadAPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="52dp"
        android:text="@string/cantidadAPagar"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonVisa" />

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="@string/cantidadAPagar"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCantidadAPagar" />

    <TextView
        android:id="@+id/textNombreDeTarjeta"
        android:layout_width="322dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:text="@string/textNombreDeTarjeta"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCantidad" />

    <TextView
        android:id="@+id/textNumeroDeTarjeta"
        android:layout_width="322dp"
        android:layout_height="38dp"
        android:text="@string/textNumeroDeTarjeta"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/textFechaDeExp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombreDeTarjeta" />

    <TextView
        android:id="@+id/textFechaDeExp"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:text="@string/textFecha"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumeroDeTarjeta" />

    <TextView
        android:id="@+id/textCCV"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:text="@string/textCCV"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textPostal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toEndOf="@+id/textFechaDeExp"
        app:layout_constraintTop_toBottomOf="@+id/textNumeroDeTarjeta" />

    <TextView
        android:id="@+id/textPostal"
        android:layout_width="322dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="@string/textPostal"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFechaDeExp" />

</androidx.constraintlayout.widget.ConstraintLayout>