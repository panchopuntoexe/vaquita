<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/textTituloInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tituloApp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textBienvenida"
        app:layout_constraintEnd_toStartOf="@+id/imageProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloInicio"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageComic1"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic3"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic2"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/viewCompras"
        android:layout_width="0dp"
        android:layout_height="309dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
