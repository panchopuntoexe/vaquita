            </LinearLayout>

            <LinearLayout
                android:id="@+id/gasto4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageComic9"
                    android:layout_width="60dp"
