<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadInicio">

    <TextView
        android:id="@+id/textTituloInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tituloApp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        android:text="@string/textBienvenida"
        app:layout_constraintEnd_toStartOf="@+id/imageProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textBienvenida"
        app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/viewCompras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageComic1"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic3"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic2"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />

            <ImageView
                android:id="@+id/imageComic"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/imagengenerica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textBienvenida"
                app:layout_constraintTop_toBottomOf="@+id/textTituloInicio" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/viewCompras"
        android:layout_width="412dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gasto1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageComic6"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/comicportada" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comic Listening Party"
                    android:translationX="150dp"
                    android:translationY="-70dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="14:34   8/1/2022"
                    android:translationX="100dp"
                    android:translationY="-50dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="$ -10.25"
                    android:translationX="350dp"
                    android:translationY="-65dp" />

            </LinearLayout>

            <LinearLayout
